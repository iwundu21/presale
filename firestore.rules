rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow unauthenticated writes only to the settings document for presale management
    match /presaleStats/settings {
      allow write: if true;
      allow read: if true;
    }

    // Allow any authenticated user to read from presaleStats
    match /presaleStats/{docId} {
       allow read: if true;
    }

    // Allow users to read their own data and transactions if they are authenticated
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/transactions/{txId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
