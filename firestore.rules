rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own data and cannot write to it directly.
    // All writes must go through the secure server-side functions.
    match /users/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Presale stats are public to read, but cannot be modified by clients.
    match /presale/stats {
      allow read: if true;
      allow write: if false;
    }
  }
}