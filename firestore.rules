rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read their own data. No client can write to it.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // All writes must go through the backend service
      
      // Users can only read their own transactions. No client can write new ones.
      match /transactions/{txId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // All writes must go through the backend service
      }
    }
    
    // Anyone can read presale stats, but no one can write to them from the client.
    match /presale/stats {
      allow read: if true;
      allow write: if false; // All writes must go through the backend service
    }
  }
}
