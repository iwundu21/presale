rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads and writes to all collections
    // This is for development purposes and should be secured before production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{walletAddress} {
      allow read, write: if true;

      match /transactions/{transactionId} {
        allow read, write: if true;
      }
    }
  }
}