rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own data and cannot write to it directly.
    // Writes must be handled by secure server-side logic.
    match /users/{userId} {
      // For this app, all reads are done via server actions, so direct client reads can be disallowed.
      // Writes are also only through server actions.
      allow read, write: if false;
    }

    match /users/{userId}/transactions/{txId} {
       // All reads are done via server actions.
      allow read, write: if false;
    }

    // Anyone can read presale stats to see progress.
    // No one can write to it directly from the client.
    match /presale/stats {
      allow read: if true;
      allow write: if false;
    }
  }
}
