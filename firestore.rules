rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read and write access to user data and presale stats during development.
    // This allows both client-side and server-side code to function without authentication issues.
    // TODO: Secure these rules before launching to production.
    match /{path=**} {
      allow read, write: if true;
    }
  }
}
