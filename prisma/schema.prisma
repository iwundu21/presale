// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  wallet       String        @id
  balance      Float
  transactions Transaction[]
}

model Transaction {
  id                   String    @id
  amountExn            Float
  paidAmount           Float
  paidCurrency         String
  date                 DateTime
  status               String
  failureReason        String?
  blockhash            String?
  lastValidBlockHeight Int?
  user                 User      @relation(fields: [userWallet], references: [wallet])
  userWallet           String
}

model Config {
  key   String @id
  value String
}
